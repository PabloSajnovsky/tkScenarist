<tkmenu>

    <!-- menu PROJECT -->
    <menu label="_Project">
        <command
            label="_New"
            accelerator="Ctrl+N"
            command="@Project:New"
        />
        <separator/>
        <command
            label="_Open"
            accelerator="Ctrl+O"
            command="@Project:Open"
        />
<!--
        <command label="_Open recent"/>
-->
        <separator/>
        <command
            label="_Save"
            accelerator="Ctrl+S"
            command="@Project:Save"
        />
        <command
            label="Save _as..."
            accelerator="Ctrl+Shift+S"
            command="@Project:Save:As"
        />
        <separator/>
        <command
            label="_Export to PDF"
            accelerator="Ctrl+P"
            command="@Project:Export:PDF"
        />
        <separator/>
        <command
            label="_Quit"
            accelerator="Ctrl+Q"
            command="@quit"
        />
    </menu>

    <!-- menu EDIT -->
    <menu label="_Edit">
        <command
            label="_Undo"
            accelerator="Ctrl+Z"
            command="@Edit:Undo"
        />
        <command
            label="_Redo"
            accelerator="Ctrl+Shift+Z"
            command="@Edit:Redo"
        />
<!--
        <separator/>
        <command label="Copy"/>
        <command label="Cut"/>
        <command label="Paste"/>
-->
        <separator/>
        <command
            label="Select all"
            accelerator="Ctrl+A"
            command="@Edit:Select:All"
        />
<!--
        <separator/>
        <command
            label="_Preferences"
            accelerator="Ctrl+U"
            command="@Edit:Preferences"
        />
-->
    </menu>

    <!-- menu VIEW -->
    <menu label="_View">
        <checkbutton
            label="_Toggle status bar"
            command="@ToggleStatusbar"
            variable="show_statusbar"
        />
    </menu>

    <!-- menu TOOLS -->
    <menu label="_Tools">
        <command
            label="_Name database"
            command="@Tools:NameDatabase"
        />
        <separator/>
        <command
            label="_Story/pitch templates"
            command="@Tools:Pitch:Templates"
        />
        <separator/>
        <command
            label="_Scenario Elements Editor (SEE)"
            command="@Tools:Scenario:Elements:Editor"
        />
    </menu>

    <!-- menu HELP -->
    <menu label="_Help">
        <command
            label="O_ffline documentation"
            command="@Help:Offline:Documentation"
        />
        <command
            label="_Online documentation"
            command="@Help:Online:Documentation"
        />
        <separator/>
        <command
            label="Get _help on mailing list"
            command="@Help:Mailing:List"
        />
        <separator/>
        <command
            label="_About..."
            command="@Help:About"
        />
    </menu>

</tkmenu>
